@model Staj.Models.UserViewModel
@{
    ViewBag.Title = "Login";
}


<div class="container">
    <div class="row aligncenter">
        <div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4" style="align-items:center">
            <form id="myForm">
                <div class="form-group">
                    <h4 style="text-align:center">Login</h4>

                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.username, new { @class = "form-control aligncenter", @placeholder = "Username" })

                </div>
                <div class="form-group aligncenter">
                    @Html.PasswordFor(m => m.password, new { @class = "form-control aligncenter", @placeholder = "Password" })

                </div>
                <div class="form-group">
                    <a href="#" class="form-control btn-primary btn-block btn-matchwidth aligncenter" onclick="LoginUser()">Submit</a>

                </div>
            </form>

        </div>
    </div>
</div>


<script>

    var LoginUser = function () {
        var data = $("#myForm").serialize();

        $.ajax({
            type: "Post",
            url: "/User/LoginUser",
            data: data,
            success: function (response) {
                if (response == "fail") {

                    window.location.href = "/User/Login";
                }
                else {

                    window.location.href = "/Home/Index";
                }
            }
        })
    }

</script>
